<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FilterChip" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="chipCornerRadius">12dp</item>
        <item name="textColor">#FFF</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
    </style>

    <style name="ChipCustomStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="textEndPadding">24dp</item>
        <item name="textStartPadding">24dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="chipSpacingVertical">16dp</item>
        <item name="chipSpacingHorizontal">16dp</item>

    </style>

    <style name="ChipUncheckedText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">#FFF</item>
        <item name="closeIconTint">#FFF</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/titleColor</item>
    </style>
</resources>
